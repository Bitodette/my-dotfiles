{
  "$schema": "/etc/xdg/swaync/configSchema.json",
  "positionX": "right", 
  "positionY": "top",
  "layer": "overlay",
  "control-center-margin-top": 10,
  "control-center-margin-bottom": 10,
  "control-center-margin-right": 15,
  "control-center-margin-left": 0,
  "control-center-width": 380,
  "control-center-height": 800,
  "fit-to-screen": false,
  "widgets": [
    "buttons-grid",
    "volume",
    "backlight",
    "mpris",
    "title",
    "notifications"
  ],
  "widget-config": {
    "title": { "text": "Notifications", "clear-all-button": true },
    "notifications": { "max-notifications": 4 },
    "volume": { "label": "󰕾 " },
    "backlight": { "label": "󰃟 " },
    "mpris": {
      "image-size": 60,
      "image-radius": 10
    },
    "buttons-grid": {
      "actions": [
        { "label": " 󰖩 ", "command": "nmcli radio wifi $(nmcli radio wifi | grep -q 'enabled' && echo 'off' || echo 'on')" },
        { "label": " 󰂯 ", "command": "bluetoothctl power $(bluetoothctl show | grep -q 'Powered: yes' && echo 'off' || echo 'on')" },
        { "label": " 󰍷 ", "command": "swaync-client -d" }, 
        { "label": " 󰌌 ", "command": "nwg-look" },
        { "label": " 󰐥 ", "command": "wlogout" }
      ]
    }
  }
}
